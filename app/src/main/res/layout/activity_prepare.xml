<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radu.cookit.PrepareActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/prepare_image"
                android:layout_width="204dp"
                android:layout_height="175dp"
                android:background="@drawable/border"
                app:srcCompat="@drawable/mamaliga"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="34dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="123dp"
                android:layout_height="168dp"
                android:layout_weight="0.30"
                android:onClick="startCook"
                android:text="Start Cooking" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prepare_title"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:text="Titlu"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="180dp" />

            <TextView
                android:id="@+id/prepare_description"
                android:layout_width="307dp"
                android:layout_height="100dp"

                android:text="Descriere"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="247dp" />

        </LinearLayout>


        <ListView
            android:id="@+id/prepare_listview"
            android:layout_width="300dp"
            android:layout_height="168dp"
            android:background="@drawable/border"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="278dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
