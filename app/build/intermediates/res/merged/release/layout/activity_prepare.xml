<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radu.cookit.PrepareActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="29dp"
        android:weightSum="1"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/prepare_image"
            android:layout_width="204dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/mamaliga"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="34dp" />

        <TextView
            android:id="@+id/prepare_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titlu"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="180dp" />

        <TextView
            android:id="@+id/prepare_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtitulu"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="211dp" />

        <TextView
            android:id="@+id/prepare_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descriere"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="247dp" />

        <ListView
            android:layout_width="368dp"
            android:id="@+id/prepare_listview"
            android:layout_height="250dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="278dp" />

        <Button
            android:id="@+id/button"
            android:onClick="startCook"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Start Cooking"
            android:layout_weight="0.37" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
